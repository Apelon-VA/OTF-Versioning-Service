    <parent>
        <groupId>org.ihtsdo.otf</groupId>
        <artifactId>tcc-parent</artifactId>
        <version>1.1-sprint2-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>tcc-api</artifactId>
    <packaging>jar</packaging>
    <name>${branch}: API</name>
    <dependencies>
        <dependency>
            <groupId>org.glassfish.hk2</groupId>
            <artifactId>hk2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.mahout</groupId>
            <artifactId>mahout-collections</artifactId>
            <version>1.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-queryparser</artifactId>
            <version>4.3.1</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>generate-jaxb-schema</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.sun.tools.jxc.maven2</groupId>
                        <artifactId>maven-jaxb-schemagen-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-dto-schema</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <project>${project}</project>
                                    <destdir>${project.build.directory}/schemas</destdir>
                                    <srcdir>${project.build.sourceDirectory}/org/ihtsdo/tk/dto</srcdir>
                                    <verbose>true</verbose>
                                </configuration>
                            </execution>
                            <execution>
                                <id>generate-fxmodel-schema</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <project>${project}</project>
                                    <destdir>${project.build.directory}/schemas</destdir>
                                    <srcdir>${project.build.sourceDirectory}/org/ihtsdo/fxmodel</srcdir>
                                    <verbose>true</verbose>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>    
